{
    "$id": "https://raw.githubusercontent.com/SPINEProject/SPINE-json-schema/master/schemas/workflowExecution.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Definitions for common properties of task and workflow executions",
    "definitions": {
        "miniWorkflowSet": {
            "type": "string"
        },
        "experimentId": {
            "type": "string"
        },
        "manualConfig": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "reuse": {
                        "type": "boolean"
                    },
                    "taskExecutorId": {
                        "type": "string"
                    },
                    "workflowExecutorId": {
                        "type": "string"
                    },
                    "assignedTo": {
                        "type": "string"
                    },
                    "dueDate": {
                        "type": "string"
                    }
                }
            }
        },
        "autoConfig": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "reuse": {
                        "type": "boolean"
                    },
                    "taskExecutorId": {
                        "type": "string"
                    },
                    "workflowExecutorId": {
                        "type": "string"
                    }
                }
            }
        },
        "subWorkflowConfig": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "miniWorkflowSet": {
                        "$ref": "#/definitions/miniWorkflowSet"
                    },
                    "manualConfig": {
                        "$ref": "#/definitions/manualConfig"
                    },
                    "autoConfig": {
                        "$ref": "#/definitions/autoConfig"
                    },
                    "subWorkflowConfig": {
                        "$ref": "#/definitions/subWorkflowConfig"
                    }
                }
            }
        },
        "postWorkflowConfiguration": {
            "type": "object",
            "properties": {
                "inputs": {
                    "$ref": "./execution.schema.json#/definitions/inputs"
                },
                "label": {
                    "$ref": "./execution.schema.json#/definitions/label"
                },
                "simulate": {
                    "$ref": "./execution.schema.json#/definitions/simulate"
                },
                "miniWorkflowSet": {
                    "$ref": "#/definitions/miniWorkflowSet"
                },
                "reference": {
                    "type": "object",
                    "properties": {
                        "experimentId": {
                            "$ref": "#/definitions/experimentId"
                        }
                    }
                },
                "manualConfig": {
                    "$ref": "#/definitions/manualConfig"
                },
                "autoConfig": {
                    "$ref": "#/definitions/autoConfig"
                },
                "subWorkflowConfig": {
                    "$ref": "#/definitions/subWorkflowConfig"
                }
            }
        }
    }
}