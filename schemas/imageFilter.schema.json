{
    "$id": "https://raw.githubusercontent.com/SPINEProject/SPINE-json-schema/master/schemas/imageFilter.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema to filter image based on DICOM parameters.",
    "type": "object",
    "definitions": {
        "operator": {
            "description": "Description of an operators",
            "type": "object",
            "properties": {
                "label": {
                    "description": "Label of the operator",
                    "type": "string"
                },
                "value": {
                    "description": "Value of the operator",
                    "type": "string"
                }
            },
            "required": [
                "label",
                "value"
            ]
        },
        "operatorEqual": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                "="
                            ]
                        },
                        "value": {
                            "enum": [
                                "equals"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorNotEqual": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                "!="
                            ]
                        },
                        "value": {
                            "enum": [
                                "not equals"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorLessThan": {
            "properties": {
                "label": {
                    "enum": [
                        "<"
                    ]
                },
                "value": {
                    "enum": [
                        "less than"
                    ]
                }
            },
            "required": [
                "label",
                "value"
            ]
        },
        "operatorLesserEqual": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                "<="
                            ]
                        },
                        "value": {
                            "enum": [
                                "less than or equal to"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorGreaterEqual": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                ">="
                            ]
                        },
                        "value": {
                            "enum": [
                                "greater than or equal to"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorGreaterThan": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                ">"
                            ]
                        },
                        "value": {
                            "enum": [
                                "greater than"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorContains": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                "contains"
                            ]
                        },
                        "vale": {
                            "enum": [
                                "contains"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorDoesNotContains": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                "does not contain"
                            ]
                        },
                        "value": {
                            "enum": [
                                "does not contain"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorIncludes": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                "includes"
                            ]
                        },
                        "value": {
                            "enum": [
                                "includes"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorDoesNotInclude": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                "does not include"
                            ]
                        },
                        "value": {
                            "enum": [
                                "does not include"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorIn": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                "in"
                            ]
                        },
                        "value": {
                            "enum": [
                                "in"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorNotIn": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                "not in"
                            ]
                        },
                        "value": {
                            "enum": [
                                "not in"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorAND": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                "AND"
                            ]
                        },
                        "value": {
                            "enum": [
                                "AND"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "operatorOR": {
            "allOf": [
                {
                    "properties": {
                        "label": {
                            "enum": [
                                "OR"
                            ]
                        },
                        "value": {
                            "enum": [
                                "OR"
                            ]
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "textualOperator": {
            "description": "Textual operator",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "TEXTUAL_OPERATOR"
                    ]
                },
                "variant": {
                    "type": "string",
                    "enum": [
                        "SINGLE_VALUE",
                        "ALL_ELEMENT",
                        "ANY_ELEMENT"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "oneOf": [
                {
                    "$ref": "#/definitions/operatorContains"
                },
                {
                    "$ref": "#/definitions/operatorDoesNotContains"
                },
                {
                    "$ref": "#/definitions/operatorEqual"
                },
                {
                    "$ref": "#/definitions/operatorNotEqual"
                },
                {
                    "$ref": "#/definitions/operatorIn"
                },
                {
                    "$ref": "#/definitions/operatorNotIn"
                }
            ]
        },
        "numericalOperator": {
            "description": "Numerical operator",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "NUMERICAL_OPERATOR"
                    ]
                },
                "variant": {
                    "type": "string",
                    "enum": [
                        "SINGLE_VALUE",
                        "ALL_ELEMENT",
                        "ANY_ELEMENT"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "oneOf": [
                {
                    "$ref": "#/definitions/operatorEqual"
                },
                {
                    "$ref": "#/definitions/operatorNotEqual"
                },
                {
                    "$ref": "#/definitions/operatorIn"
                },
                {
                    "$ref": "#/definitions/operatorNotIn"
                },
                {
                    "$ref": "#/definitions/operatorLessThan"
                },
                {
                    "$ref": "#/definitions/operatorLesserEqual"
                },
                {
                    "$ref": "#/definitions/operatorGreaterEqual"
                },
                {
                    "$ref": "#/definitions/operatorGreaterThan"
                }
            ]
        },
        "logicalOperator": {
            "description": "Logical operator",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "LOGICAL_OPERATOR"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "oneOf": [
                {
                    "$ref": "#/definitions/operatorAND"
                },
                {
                    "$ref": "#/definitions/operatorOR"
                }
            ]
        },
        "arrayOperator": {
            "description": "Array operator",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "ARRAY_OPERATOR"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "oneOf": [
                {
                    "$ref": "#/definitions/operatorIncludes"
                },
                {
                    "$ref": "#/definitions/operatorDoesNotInclude"
                },
                {
                    "$ref": "#/definitions/operatorEqual"
                },
                {
                    "$ref": "#/definitions/operatorNotEqual"
                }
            ]
        },
        "criterion": {
            "description": "Criterion",
            "type": "object",
            "properties": {
                "attribute": {
                    "description": "Name of the attribute to filter",
                    "type": "string"
                },
                "operator": {
                    "oneOf": [
                        {
                            "$ref": "#/definitions/numericalOperator"
                        },
                        {
                            "$ref": "#/definitions/textualOperator"
                        },
                        {
                            "$ref": "#/definitions/arrayOperator"
                        }
                    ]
                },
                "value": {
                    "description": "Value for the criterion."
                }
            }
        },
        "expression": {
            "description": "An expression",
            "type": "object",
            "properties": {
                "logicalOperator": {
                    "description": "Logical operator ruling the expression. For instance if the logical operator is AND, then all the expression will AND all the criteria and expressions, e.g., Criteria_1 AND Criteria_2 AND Expression_1 AND Expression_2",
                    "$ref": "#/definitions/logicalOperator"
                },
                "criteria": {
                    "description": "List of criteria in the expression",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/criterion"
                    }
                },
                "expressions": {
                    "description": "List of expression in the expression.",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/expression"
                    }
                }
            },
            "required": [
                "logicalOperator",
                "criteria",
                "expressions"
            ]
        },
        "imageFilterPost": {
            "$id": "#imageFilterPost",
            "decription": "image filter when posted",
            "type": "object",
            "properties": {
                "filter": {
                    "$ref": "#/definitions/expression"
                }
            },
            "required": [
                "filter"
            ]
        },
        "imageFilterReference": {
            "type": "object",
            "description": "Filter references",
            "properties": {
                "ownerId": {
                    "description": "Owner UUID",
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "ownerId"
            ]
        },
        "imageFilterName": {
            "type": "string",
            "description": "Filter name"
        },
        "imageFilterSnapshotName": {
            "type": "string",
            "description": "Filter snapshot name"
        },
        "imageFilterDoc": {
            "$id": "#imageFilterDoc",
            "decription": "image filter when posted",
            "type": "object",
            "properties": {
                "filter": {
                    "$ref": "#/definitions/expression"
                },
                "name": {
                    "$ref": "#/definitions/imageFilterName"
                },
                "_id": {
                    "type": "string"
                },
                "_rev": {
                    "type": "string"
                },
                "docType": {
                    "type": "string",
                    "enum": [
                        "imageFilter"
                    ]
                },
                "reference": {
                    "$ref": "#/definitions/imageFilterReference"
                }
            },
            "additionalProperties": false,
            "required": [
                "filter",
                "reference",
                "docType",
                "name"
            ]
        },
        "imageFilterSnapshotResultImage": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "comments": {
                        "type": "string"
                    }
                },
                "required": [
                    "id"
                ],
                "additionalProperties": false
            }
        },
        "imageFilterSnapshotResult": {
            "$id": "#imageFilterSnapshotResult",
            "decription": "image filter snapshot, result section",
            "type": "object",
            "properties": {
                "cohort": {
                    "type": "object",
                    "patternProperties": {
                        ".": {
                            "type": "object",
                            "properties": {
                                "subject": {
                                    "type": "object",
                                    "patternProperties": {
                                        ".": {
                                            "type": "object",
                                            "properties": {
                                                "visit": {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        ".": {
                                                            "type": "object",
                                                            "properties": {
                                                                "image": {
                                                                    "$ref": "#/definitions/imageFilterSnapshotResultImage"
                                                                }
                                                            },
                                                            "required": [
                                                                "image"
                                                            ],
                                                            "additionalProperties": false
                                                        }
                                                    },
                                                    "properties": {
                                                        "withoutVisit": {
                                                            "type": "object",
                                                            "properties": {
                                                                "image": {
                                                                    "$ref": "#/definitions/imageFilterSnapshotResultImage"
                                                                }
                                                            },
                                                            "required": [
                                                                "image"
                                                            ],
                                                            "additionalProperties": false
                                                        }
                                                    },
                                                    "required": [],
                                                    "additionalProperties": false
                                                }
                                            },
                                            "required": [
                                                "visit"
                                            ],
                                            "additionalProperties": false
                                        }
                                    }
                                }
                            },
                            "required": [
                                "subject"
                            ],
                            "additionalProperties": false
                        }
                    }
                }
            },
            "required": [
                "cohort"
            ],
            "additionalProperties": false
        },
