{
    "$id": "https://raw.githubusercontent.com/SPINEProject/SPINE-json-schema/master/schemas/imageFilter.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema to filter image based on DICOM parameters.",
    "type": "object",
    "definitions": {
        "criterionWithNumericalOperatorEqual": {
            "title": "Criterion with numerical operator equal",
            "properties": {
                "value": {
                    "type": "number"
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMERICAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "="
                            ]
                        },
                        "value": {
                            "enum": [
                                "equals"
                            ]
                        }
                    }
                }
            }
        },
        "operatorNotEqual": {
            "properties": {
                "label": {
                    "enum": [
                        "!="
                    ]
                },
                "value": {
                    "enum": [
                        "not equals"
                    ]
                }
            }
        },
        "operatorLessThan": {
            "properties": {
                "label": {
                    "enum": [
                        "<"
                    ]
                },
                "value": {
                    "enum": [
                        "less than"
                    ]
                }
            }
        },
        "operatorLesserEqual": {
            "properties": {
                "label": {
                    "enum": [
                        "<="
                    ]
                },
                "value": {
                    "enum": [
                        "less than or equal to"
                    ]
                }
            }
        },
        "operatorGreaterEqual": {
            "properties": {
                "label": {
                    "enum": [
                        ">="
                    ]
                },
                "value": {
                    "enum": [
                        "greater than or equal to"
                    ]
                }
            }
        },
        "operatorGreaterThan": {
            "properties": {
                "label": {
                    "enum": [
                        ">"
                    ]
                },
                "value": {
                    "enum": [
                        "greater than"
                    ]
                }
            }
        },
        "operatorContains": {
            "properties": {
                "label": {
                    "enum": [
                        "contains"
                    ]
                },
                "vale": {
                    "enum": [
                        "contains"
                    ]
                }
            }
        },
        "operatorDoesNotContains": {
            "properties": {
                "label": {
                    "enum": [
                        "does not contain"
                    ]
                },
                "value": {
                    "enum": [
                        "does not contain"
                    ]
                }
            }
        },
        "operatorIncludes": {
            "properties": {
                "label": {
                    "enum": [
                        "includes"
                    ]
                },
                "value": {
                    "enum": [
                        "includes"
                    ]
                }
            }
        },
        "operatorDoesNotInclude": {
            "properties": {
                "label": {
                    "enum": [
                        "does not include"
                    ]
                },
                "value": {
                    "enum": [
                        "does not include"
                    ]
                }
            }
        },
        "operatorIn": {
            "properties": {
                "label": {
                    "enum": [
                        "in"
                    ]
                },
                "value": {
                    "enum": [
                        "in"
                    ]
                }
            }
        },
        "operatorNotIn": {
            "properties": {
                "label": {
                    "enum": [
                        "not in"
                    ]
                },
                "value": {
                    "enum": [
                        "not in"
                    ]
                }
            }
        },
        "operatorAND": {
            "title": "Logical AND",
            "properties": {
                "label": {
                    "enum": [
                        "AND"
                    ]
                },
                "value": {
                    "enum": [
                        "AND"
                    ]
                }
            }
        },
        "operatorOR": {
            "title": "Logical OR",
            "properties": {
                "label": {
                    "enum": [
                        "OR"
                    ]
                },
                "value": {
                    "enum": [
                        "OR"
                    ]
                }
            }
        },
        "logicalOperator": {
            "description": "Logical operator ruling the expression. For instance if the logical operator is AND, then all the expression will AND all the criteria and expressions, e.g., Criteria_1 AND Criteria_2 AND Expression_1 AND Expression_2",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "LOGICAL_OPERATOR"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "oneOf": [
                {
                    "$ref": "#/definitions/operatorAND"
                },
                {
                    "$ref": "#/definitions/operatorOR"
                }
            ]
        },
        "textualOperator": {
            "description": "Textual operator",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "TEXTUAL_OPERATOR"
                    ]
                },
                "variant": {
                    "type": "string",
                    "enum": [
                        "SINGLE_VALUE",
                        "ALL_ELEMENT",
                        "ANY_ELEMENT"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "oneOf": [
                {
                    "$ref": "#/definitions/operatorContains"
                },
                {
                    "$ref": "#/definitions/operatorDoesNotContains"
                },
                {
                    "$ref": "#/definitions/operatorEqual"
                },
                {
                    "$ref": "#/definitions/operatorNotEqual"
                },
                {
                    "$ref": "#/definitions/operatorIn"
                },
                {
                    "$ref": "#/definitions/operatorNotIn"
                }
            ]
        },
        "numericalOperator": {
            "description": "Numerical operator",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "NUMERICAL_OPERATOR"
                    ]
                },
                "variant": {
                    "type": "string",
                    "enum": [
                        "SINGLE_VALUE",
                        "ALL_ELEMENT",
                        "ANY_ELEMENT"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "oneOf": [
                {
                    "properties": {
                        "label": {
                            "$ref": "#/definitions/operatorEqualLabel"
                        },
                        "value": {
                            "enum": [
                                "equals"
                            ]
                        }
                    }
                },
                {
                    "$ref": "#/definitions/operatorNotEqual"
                },
                {
                    "$ref": "#/definitions/operatorIn"
                },
                {
                    "$ref": "#/definitions/operatorNotIn"
                },
                {
                    "$ref": "#/definitions/operatorLessThan"
                },
                {
                    "$ref": "#/definitions/operatorLesserEqual"
                },
                {
                    "$ref": "#/definitions/operatorGreaterEqual"
                },
                {
                    "$ref": "#/definitions/operatorGreaterThan"
                }
            ]
        },
        "arrayOperator": {
            "description": "Array operator",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "ARRAY_OPERATOR"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "oneOf": [
                {
                    "$ref": "#/definitions/operatorIncludes"
                },
                {
                    "$ref": "#/definitions/operatorDoesNotInclude"
                },
                {
                    "$ref": "#/definitions/operatorEqual"
                },
                {
                    "$ref": "#/definitions/operatorNotEqual"
                }
            ]
        },
        "criterion": {
            "title": "Criterion",
            "type": "object",
            "properties": {
                "attribute": {
                    "description": "Key of the attribute to filter",
                    "type": "string"
                },
                "operator": {
                    "description": "The selected operator",
                    "type": "object",
                    "required": [
                        "type",
                        "value",
                        "label"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMERICAL_OPERATOR",
                                "TEXTUAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "value": {
                            "type": "string"
                        },
                        "label": {
                            "type": "string"
                        }
                    }
                },
                "value": {
                    "description": "Value for the criterion."
                }
            },
            "oneOf": [
                {
                    "$ref": "#/definitions/criterionWithNumericalOperatorEqual"
                }
            ],
            "required": [
                "attribute",
                "operator",
                "value"
            ],
            "additionalProperties": false
        },
        "criteria": {
            "description": "List of criteria in the expression",
            "type": "array",
            "items": {
                "$ref": "#/definitions/criterion"
            }
        },
        "expressionList": {
            "description": "List of expression in the expression.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/expression"
            }
        },
        "expression": {
            "description": "An expression",
            "type": "object",
            "properties": {
                "logicalOperator": {
                    "$ref": "#/definitions/logicalOperator"
                },
                "criteria": {
                    "$ref": "#/definitions/criteria"
                },
                "expressions": {
                    "$ref": "#/definitions/expressionList"
                }
            },
            "required": [
                "logicalOperator",
                "criteria",
                "expressions"
            ]
        },
        "imageFilterReference": {
            "type": "object",
            "description": "Filter references",
            "properties": {
                "ownerId": {
                    "description": "Owner UUID",
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "ownerId"
            ]
        },
        "imageFilterName": {
            "type": "string",
            "description": "Filter name"
        },
        "imageFilterDoc": {
            "$id": "#imageFilterDoc",
            "decription": "image filter when posted",
            "type": "object",
            "properties": {
                "filter": {
                    "$ref": "#/definitions/expression"
                },
                "name": {
                    "$ref": "#/definitions/imageFilterName"
                },
                "_id": {
                    "type": "string"
                },
                "_rev": {
                    "type": "string"
                },
                "docType": {
                    "type": "string",
                    "enum": [
                        "imageFilter"
                    ]
                },
                "reference": {
                    "$ref": "#/definitions/imageFilterReference"
                }
            },
            "additionalProperties": false,
            "required": [
                "filter",
                "reference",
                "docType",
                "name"
            ]
        },
        "owner": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "lastname": {
                    "type": "string"
                },
                "uuid": {
                    "type": "string"
                }
            },
            "required": [
                "uuid",
                "lastname",
                "name"
            ],
            "additionalProperties": false
        },
        "getFilterResponse": {
            "type": "object",
            "properties": {
                "uuid": {
                    "description": "Filter UUID",
                    "type": "string"
                },
                "name": {
                    "$ref": "#/definitions/imageFilterName"
                },
                "filter": {
                    "description": "The filter (an expression)",
                    "$ref": "#/definitions/expression"
                },
                "owner": {
                    "$ref": "#/definitions/owner"
                }
            },
            "additionalProperties": false,
            "required": [
                "filter",
                "uuid",
                "name",
                "owner"
            ]
        },
        "getFilterListResponse": {
            "type": "array",
            "items": {
                "description": "Filter summary",
                "type": "object",
                "properties": {
                    "uuid": {
                        "description": "Filter UUID",
                        "type": "string"
                    },
                    "name": {
                        "$ref": "#/definitions/imageFilterName"
                    },
                    "owner": {
                        "$ref": "#/definitions/owner"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "uuid",
                    "name",
                    "owner"
                ]
            }
        },
        "postFilterBody": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/imageFilterName"
                },
                "filter": {
                    "description": "The filter (an expression)",
                    "$ref": "#/definitions/expression"
                }
            },
            "additionalProperties": false,
            "required": [
                "filter",
                "name"
            ]
        },
        "putFilterBody": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/imageFilterName"
                },
                "filter": {
                    "description": "The filter (an expression)",
                    "$ref": "#/definitions/expression"
                }
            },
            "additionalProperties": false,
            "required": [
                "filter",
                "name"
            ]
        }
    }
}