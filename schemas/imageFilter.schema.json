{
    "$id": "https://raw.githubusercontent.com/SPINEProject/SPINE-json-schema/master/schemas/imageFilter.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema to filter image based on DICOM parameters.",
    "type": "object",
    "definitions": {
        "owner": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "lastname": {
                    "type": "string"
                },
                "uuid": {
                    "type": "string"
                }
            },
            "required": [
                "uuid",
                "lastname",
                "name"
            ],
            "additionalProperties": false
        },
        "criterionWithNumericalOperatorEqual": {
            "title": "Criterion with numerical operator equal",
            "description": "True if the attribute value is equal to the criterion value",
            "properties": {
                "value": {
                    "type": "number"
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMERICAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "="
                            ]
                        },
                        "value": {
                            "enum": [
                                "equals"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithNumericalOperatorNotEqual": {
            "title": "Criterion with numerical operator not equal",
            "description": "True if the attribute value is not equal to the criterion value",
            "properties": {
                "value": {
                    "type": "number"
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMERICAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "!="
                            ]
                        },
                        "value": {
                            "enum": [
                                "not equals"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithTextualOperatorEqual": {
            "title": "Criterion with textual operator equal",
            "description": "True if the attribute value is equal to the criterion value",
            "properties": {
                "value": {
                    "type": "string"
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "TEXTUAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "="
                            ]
                        },
                        "value": {
                            "enum": [
                                "equals"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithTextualOperatorNotEqual": {
            "title": "Criterion with textual operator not equal",
            "description": "True if the attribute value is not equal to the criterion value",
            "properties": {
                "value": {
                    "type": "string"
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "TEXTUAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "!="
                            ]
                        },
                        "value": {
                            "enum": [
                                "not equals"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithNumericalOperatorLessThan": {
            "title": "Criterion with numerical operator less than",
            "description": "True if the attribute value is less than the criterion value",
            "properties": {
                "value": {
                    "type": "number"
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMERICAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "<"
                            ]
                        },
                        "value": {
                            "enum": [
                                "less than"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithNumericalOperatorLesserEqual": {
            "title": "Criterion with numerical operator lesser equal",
            "description": "True if the attribute value is lesser than or equal to the criterion value",
            "properties": {
                "value": {
                    "type": "number"
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMERICAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "<="
                            ]
                        },
                        "value": {
                            "enum": [
                                "less than or equal to"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithNumericalOperatorGreaterEqual": {
            "title": "Criterion with numerical operator greater equal",
            "description": "True if the attribute value is greater than or equal to the criterion value",
            "properties": {
                "value": {
                    "type": "number"
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMERICAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                ">="
                            ]
                        },
                        "value": {
                            "enum": [
                                "greater than or equal to"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithNumericalOperatorGreaterThan": {
            "title": "Criterion with numerical operator greater than",
            "description": "True if the attribute value is greater than the criterion value",
            "properties": {
                "value": {
                    "type": "number"
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMERICAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                ">"
                            ]
                        },
                        "value": {
                            "enum": [
                                "greater than"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithNumericalOperatorIn": {
            "title": "Criterion with numerical operator in",
            "description": "True if the attribute value is in the criterion value array",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMERICAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "in"
                            ]
                        },
                        "value": {
                            "enum": [
                                "in"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithNumericalOperatorNotIn": {
            "title": "Criterion with numerical operator not in",
            "description": "True if the attribute value is not in the criterion value array",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMERICAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "not in"
                            ]
                        },
                        "value": {
                            "enum": [
                                "not in"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithTextualOperatorIn": {
            "title": "Criterion with textual operator in",
            "description": "True if the attribute value is in the criterion value array",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "TEXTUAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "in"
                            ]
                        },
                        "value": {
                            "enum": [
                                "in"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithTextualOperatorNotIn": {
            "title": "Criterion with textual operator not in",
            "description": "True if the attribute value is not in the criterion value array",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "TEXTUAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "not in"
                            ]
                        },
                        "value": {
                            "enum": [
                                "not in"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithTextualOperatorContains": {
            "title": "Criterion with textual operator contains",
            "description": "True if the attribute string value contains the criterion value",
            "properties": {
                "value": {
                    "type": "string"
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "TEXTUAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "contains"
                            ]
                        },
                        "value": {
                            "enum": [
                                "contains"
                            ]
                        }
                    }
                }
            }
        },
        "criterionWithTextualOperatorNotContains": {
            "title": "Criterion with textual operator not contains",
            "description": "True if the attribute string value does not contains the criterion value",
            "properties": {
                "value": {
                    "type": "string"
                },
                "operator": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "TEXTUAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "label": {
                            "enum": [
                                "does not contain"
                            ]
                        },
                        "value": {
                            "enum": [
                                "does not contain"
                            ]
                        }
                    }
                }
            }
        },
        "operatorAND": {
            "title": "Logical AND",
            "properties": {
                "label": {
                    "enum": [
                        "AND"
                    ]
                },
                "value": {
                    "enum": [
                        "AND"
                    ]
                }
            }
        },
        "operatorOR": {
            "title": "Logical OR",
            "properties": {
                "label": {
                    "enum": [
                        "OR"
                    ]
                },
                "value": {
                    "enum": [
                        "OR"
                    ]
                }
            }
        },
        "logicalOperator": {
            "description": "Logical operator ruling the expression. For instance if the logical operator is AND, then all the expression will AND all the criteria and expressions, e.g., Criteria_1 AND Criteria_2 AND Expression_1 AND Expression_2",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "LOGICAL_OPERATOR"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "oneOf": [
                {
                    "$ref": "#/definitions/operatorAND"
                },
                {
                    "$ref": "#/definitions/operatorOR"
                }
            ]
        },
        "criterion": {
            "title": "Criterion",
            "type": "object",
            "properties": {
                "attribute": {
                    "description": "Key of the attribute to filter",
                    "type": "string"
                },
                "operator": {
                    "description": "The selected operator",
                    "type": "object",
                    "required": [
                        "type",
                        "value",
                        "label",
                        "variant"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMERICAL_OPERATOR",
                                "TEXTUAL_OPERATOR"
                            ]
                        },
                        "variant": {
                            "type": "string",
                            "enum": [
                                "SINGLE_VALUE",
                                "ALL_ELEMENT",
                                "ANY_ELEMENT"
                            ]
                        },
                        "value": {
                            "type": "string"
                        },
                        "label": {
                            "type": "string"
                        }
                    }
                },
                "value": {
                    "description": "Value for the criterion."
                }
            },
            "oneOf": [
                {
                    "title": "Criterion with numerical operator",
                    "oneOf": [
                        {
                            "$ref": "#/definitions/criterionWithNumericalOperatorEqual"
                        },
                        {
                            "$ref": "#/definitions/criterionWithNumericalOperatorLessThan"
                        },
                        {
                            "$ref": "#/definitions/criterionWithNumericalOperatorNotEqual"
                        },
                        {
                            "$ref": "#/definitions/criterionWithNumericalOperatorLesserEqual"
                        },
                        {
                            "$ref": "#/definitions/criterionWithNumericalOperatorGreaterEqual"
                        },
                        {
                            "$ref": "#/definitions/criterionWithNumericalOperatorGreaterThan"
                        },
                        {
                            "$ref": "#/definitions/criterionWithNumericalOperatorIn"
                        },
                        {
                            "$ref": "#/definitions/criterionWithNumericalOperatorNotIn"
                        }
                    ]
                },
                {
                    "title": "Criterion with textual operator",
                    "oneOf": [
                        {
                            "$ref": "#/definitions/criterionWithTextualOperatorContains"
                        },
                        {
                            "$ref": "#/definitions/criterionWithTextualOperatorNotContains"
                        },
                        {
                            "$ref": "#/definitions/criterionWithTextualOperatorEqual"
                        },
                        {
                            "$ref": "#/definitions/criterionWithTextualOperatorNotEqual"
                        },
                        {
                            "$ref": "#/definitions/criterionWithTextualOperatorIn"
                        },
                        {
                            "$ref": "#/definitions/criterionWithTextualOperatorNotIn"
                        }
                    ]
                }
            ],
            "required": [
                "attribute",
                "operator",
                "value"
            ],
            "additionalProperties": false
        },
        "criteria": {
            "description": "List of criteria in the expression",
            "type": "array",
            "items": {
                "$ref": "#/definitions/criterion"
            }
        },
        "expressionList": {
            "description": "List of expression in the expression.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/expression"
            }
        },
        "expression": {
            "description": "An expression",
            "type": "object",
            "properties": {
                "logicalOperator": {
                    "$ref": "#/definitions/logicalOperator"
                },
                "criteria": {
                    "$ref": "#/definitions/criteria"
                },
                "expressions": {
                    "$ref": "#/definitions/expressionList"
                }
            },
            "required": [
                "logicalOperator",
                "criteria",
                "expressions"
            ]
        },
        "imageFilterReference": {
            "type": "object",
            "description": "Filter references",
            "properties": {
                "ownerId": {
                    "description": "Owner UUID",
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "ownerId"
            ]
        },
        "imageFilterName": {
            "type": "string",
            "description": "Filter name"
        },
        "imageFilterDoc": {
            "$id": "#imageFilterDoc",
            "decription": "image filter when posted",
            "type": "object",
            "properties": {
                "filter": {
                    "$ref": "#/definitions/expression"
                },
                "name": {
                    "$ref": "#/definitions/imageFilterName"
                },
                "_id": {
                    "type": "string"
                },
                "_rev": {
                    "type": "string"
                },
                "docType": {
                    "type": "string",
                    "enum": [
                        "imageFilter"
                    ]
                },
                "reference": {
                    "$ref": "#/definitions/imageFilterReference"
                }
            },
            "additionalProperties": false,
            "required": [
                "filter",
                "reference",
                "docType",
                "name"
            ]
        },
        "getFilterResponse": {
            "title": "Filter response",
            "type": "object",
            "properties": {
                "uuid": {
                    "description": "Filter UUID",
                    "type": "string"
                },
                "name": {
                    "$ref": "#/definitions/imageFilterName"
                },
                "filter": {
                    "description": "The filter (an expression)",
                    "$ref": "#/definitions/expression"
                },
                "owner": {
                    "$ref": "#/definitions/owner"
                }
            },
            "additionalProperties": false,
            "required": [
                "filter",
                "uuid",
                "name",
                "owner"
            ]
        },
        "getFilterListResponse": {
            "title": "Get filter list response",
            "type": "array",
            "items": {
                "description": "Filter summary",
                "type": "object",
                "properties": {
                    "uuid": {
                        "description": "Filter UUID",
                        "type": "string"
                    },
                    "name": {
                        "$ref": "#/definitions/imageFilterName"
                    },
                    "owner": {
                        "$ref": "#/definitions/owner"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "uuid",
                    "name",
                    "owner"
                ]
            }
        },
        "postFilterBody": {
            "title": "Post filter body",
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/imageFilterName"
                },
                "filter": {
                    "description": "The filter (an expression)",
                    "$ref": "#/definitions/expression"
                }
            },
            "additionalProperties": false,
            "required": [
                "filter",
                "name"
            ]
        },
        "putFilterBody": {
            "title": "Put filter body",
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/imageFilterName"
                },
                "filter": {
                    "description": "The filter (an expression)",
                    "$ref": "#/definitions/expression"
                }
            },
            "additionalProperties": false,
            "required": [
                "filter",
                "name"
            ]
        }
    }
}
