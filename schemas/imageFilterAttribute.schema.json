{
    "$id": "https://raw.githubusercontent.com/SPINEProject/SPINE-json-schema/master/schemas/imageFilterAttribute.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Image filter attribute",
    "type": "object",
    "definitions": {
        "attributeType": {
            "description": "string or number",
            "type": "string",
            "enum": [
                "NUMBER",
                "STRING"
            ]
        },
        "attributeIsOrdered": {
            "type": "boolean",
            "description": "If the value is an array, does the order matter?"
        },
        "attributeKey": {
            "type": "string",
            "description": "key for this attribute"
        },
        "attributeLabel": {
            "type": "string",
            "description": "label for this attribute"
        },
        "attributeOptions": {
            "oneOf": [
                {
                    "description": "With enum",
                    "allOf": [
                        {
                            "$ref": "#/definitions/attributeOptionsBase"
                        },
                        {
                            "properties": {
                                "min": {},
                                "max": {}
                            },
                            "additionalProperties": false
                        }
                    ]
                },
                {
                    "description": "Without enum",
                    "allOf": [
                        {
                            "$ref": "#/definitions/attributeOptionsBase"
                        },
                        {
                            "required": [
                                "enum",
                                "areOtherValuesAllowed"
                            ]
                        }
                    ]
                }
            ]
        },
        "attributeOptionsBase": {
            "type": "object",
            "properties": {
                "areOtherValuesAllowed": {
                    "type": "boolean"
                },
                "enum": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "number"
                            }
                        ]
                    }
                },
                "min": {
                    "type": "number"
                },
                "max": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        },
        "attributeBase": {
            "description": "Attribute base schema",
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/definitions/attributeType"
                },
                "isOrdered": {
                    "$ref": "#/definitions/attributeIsOrdered"
                },
                "attributeKey": {
                    "$ref": "#/definitions/attributeKey"
                },
                "attributeLabel": {
                    "$ref": "#/definitions/attributeLabel"
                },
                "multiplicityMin": {
                    "description": "Multiplicity is defined with two values. This is the first one, must be an integer",
                    "type": "number",
                    "min": 1
                },
                "multiplicityMax": {
                    "description": "Multiplicity is defined with two values. This is the first one, must be an integer or 'N'",
                    "oneOf": [
                        {
                            "type": "number",
                            "min": 1
                        },
                        {
                            "type": "string",
                            "enum": [
                                "N"
                            ]
                        }
                    ]
                },
                "options": {
                    "$ref": "#/definitions/attributeOptions"
                }
            },
            "required": [
                "type",
                "attributeKey",
                "attributeLabel",
                "multiplicityMin",
                "multiplicityMax",
                "options"
            ],
            "additionalProperties": false
        },
        "attributeAPI": {
            "description": "Attribute",
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/definitions/attributeType"
                },
                "isOrdered": {
                    "$ref": "#/definitions/attributeIsOrdered"
                },
                "attributeKey": {
                    "$ref": "#/definitions/attributeKey"
                },
                "attributeLabel": {
                    "$ref": "#/definitions/attributeLabel"
                },
                "multiplicityMin": {
                    "description": "Multiplicity is defined with two values. This is the first one, must be an integer",
                    "type": "number",
                    "minimum": 1
                },
                "multiplicityMax": {
                    "description": "Multiplicity is defined with two values. This is the first one, must be an integer or 'N'",
                    "oneOf": [
                        {
                            "type": "number",
                            "minimum": 1
                        },
                        {
                            "type": "string",
                            "enum": [
                                "N"
                            ]
                        }
                    ]
                },
                "options": {
                    "$ref": "#/definitions/attributeOptions"
                }
            },
            "required": [
                "type",
                "attributeKey",
                "attributeLabel",
                "multiplicityMin",
                "multiplicityMax",
                "options"
            ],
            "additionalProperties": false
        },
        "attributeNumber": {
            "description": "Attribute schema when atribute type is number",
            "type": "object",
            "allOf": [
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "NUMBER"
                            ]
                        },
                        "options": {
                            "properties": {
                                "areOtherValuesAllowed": {},
                                "enum": {
                                    "items": {
                                        "type": "number"
                                    }
                                },
                                "min": {},
                                "max": {}
                            },
                            "additionalProperties": false
                        }
                    }
                },
                {
                    "$ref": "#/definitions/attributeBase"
                }
            ]
        },
        "attributeString": {
            "description": "Attribute schema when atribute type is string",
            "type": "object",
            "allOf": [
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "STRING"
                            ]
                        },
                        "options": {
                            "properties": {
                                "areOtherValuesAllowed": {},
                                "enum": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            },
                            "additionalProperties": false
                        }
                    }
                },
                {
                    "$ref": "#/definitions/attributeBase"
                }
            ]
        },
        "attribute": {
            "description": "Attribute",
            "type": "object",
            "oneOf": [
                {
                    "$ref": "#/definitions/attributeNumber"
                },
                {
                    "$ref": "#/definitions/attributeString"
                }
            ]
        },
        "getAttributeListResponseAPIDoc": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/attributeAPI"
            }
        }
    }
}